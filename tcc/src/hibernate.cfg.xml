<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/desenv</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">admin</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.use_sql_comments">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.generate_statistics">true</property>
		<property name="hibernate.hbm2ddl.auto">create-update</property>

		<mapping class="br.com.csempreendimentos.sgi.model.Cliente" />
		<mapping class="br.com.csempreendimentos.sgi.model.Construtora" />
		<mapping class="br.com.csempreendimentos.sgi.model.ConstrutoraEmpreendimento" />
		<mapping class="br.com.csempreendimentos.sgi.model.Empreendimento" />
		<mapping class="br.com.csempreendimentos.sgi.model.EmpreendimentoImovel" />
		<mapping class="br.com.csempreendimentos.sgi.model.Bairro" />
		<mapping class="br.com.csempreendimentos.sgi.model.Endereco" />
		<mapping class="br.com.csempreendimentos.sgi.model.Imovel" />
		<mapping class="br.com.csempreendimentos.sgi.model.Telefone" />
		<mapping class="br.com.csempreendimentos.sgi.model.TipoUsuario" />
		<mapping class="br.com.csempreendimentos.sgi.model.Usuario" />
		<mapping class="br.com.csempreendimentos.sgi.model.Venda" />
		<mapping class="br.com.csempreendimentos.sgi.model.Reserva" />

	</session-factory>
</hibernate-configuration>
